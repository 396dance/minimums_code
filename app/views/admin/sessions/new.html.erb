
  <div class="container mt-5 mb-5 h-100 d-flex justify-content-center align-items-center">
    <div class="p-3 field card">

      <h2>管理者ログイン</h2>

      <!--エラーメッセージ-->
      <% if alert %>
        <div class="alert alert-danger">
          <%= alert %>
        </div>
      <% end %>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <%= f.label :email, class:"sr-only" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control", placeholder:"メールアドレス"  %>
        </div>

        <div class="field mb-3">
          <%= f.label :password, class:"sr-only" %><br />
          <%= f.password_field :password, autocomplete: "current-password", class:"form-control", placeholder:"パスワード"  %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field mb-3">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>

        <div class="actions">
          <%= f.submit "Log in" %>
        </div>
      <% end %>

      <%= render "admin/shared/links" %>
    </div>
  </div>


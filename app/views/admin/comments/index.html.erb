<!--管理者：コメント一覧画面-->
<div class="container px-md-5 px-sm-0  mx-auto">
  <h4 class="mt-5"><strong>コメント一覧</strong></h4>

  <table class="table bg-white shadow mt-4">
    <thead>
      <th><%= "投稿" %></th>
      <th><%= "コメント者" %></th>
      <th><%= "内容" %></th>
      <th><%= "日時" %></th>
    </thead>
    <tbody>
      <% @outfit_comments. each do |outfit_comment| %>
      <tr>
        <td>
          <%= link_to admin_outfit_path(outfit_comment.outfit.id) do %>
            <%= image_tag outfit_comment.outfit.image, class: "admin-outfit-image" %>
          <% end %>
        </td>
        <td><%= outfit_comment.user.nickname %></td>
        <td class="outfit_comment"><%= outfit_comment.comment %></td>
        <td><%= outfit_comment.created_at.strftime('%Y/%m/%d %H:%M') %></td>
        <td>
          <%= link_to "削除", admin_comment_path(outfit_comment), method: :delete, data: { confirm: "本当に削除しますか？" }, class: "btn btn-sm btn-danger p-0 p-1", style: "font-size: 8px;" %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>

  <%= paginate @outfit_comments %>

</div>

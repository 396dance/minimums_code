<!--通知表示-->
<% if notice %>
  <div class="alert alert-success mb-0" style="color: #155724">
    <%= notice %>
  </div>
<% end %>

<div class='container px-md-5 px-sm-0 mx-auto'>
  <div class='row'>
    <div class='col'>

      <!--コーディネート一覧-->
      <h4 class="mt-5"><strong>コーディネート投稿一覧</strong></h4>
      <table class="table bg-white mt-3">
        <thead>
          <tr>
            <th>投稿画像</th>
            <th>本文</th>
            <th>投稿者</th>
          </tr>
        </thead>
        <tbody>
          <% @outfits.each do |outfit| %>
            <tr>
              <td>
                <%= link_to admin_outfit_path(outfit.id) do %>
                  <%= image_tag outfit.image, size: "100x100" %>
                <% end %>
              </td>
              <td><%= outfit.body.truncate(8) %></td>
              <td><%= link_to outfit.user.nickname, admin_user_path(outfit.user.id) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <%= paginate @outfits %>

    </div>
  </div>
</div>

<div class='container px-5 px-sm-0 mx-auto'>
  <div class='row'>
    <div class='col'>
      <!--ログインしましたの表示を出す-->
      <div class="notice">
        <%= notice %>
      </div>

      <h4 class="mt-5"><strong>コーディネート投稿一覧</strong></h4>
      <table class="table shadow-lg mt-3">
        <thead>
          <tr>
            <th>投稿画像</th>
            <th>タイトル</th>
            <th>本文</th>
            <th>投稿者</th>
          </tr>
        </thead>
        <tbody>
          <% @outfits.each do |outfit| %>
            <tr>
              <td><%= image_tag outfit.image, size: "100x100" %></td>
              <td><%= link_to outfit.title, admin_outfit_path(outfit.id) %></td>
              <td><%= outfit.body %></td>
              <td><%= link_to outfit.user.nickname, admin_user_path(outfit.user.id) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <%= paginate @outfits %>
    </div>
  </div>
</div>

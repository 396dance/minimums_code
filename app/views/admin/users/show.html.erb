<div class='container m-5 px-5 px-sm-0 mx-auto'>
  <div class='row'>
    <div class='col-md-3 border rounded p-3 bg-white'>

      <p><strong>プロフィール</strong></p>
      <%= image_tag @user.get_profile_image(100,100) %>

      <p>
        <strong><%= @user.nickname %></strong>
        （身長
        <% if @user.height == nil %>
          ○○㎝）
        <% else %>
          <%= @user.height %>㎝）
        <% end %>
      </p>

      <%= @user.introduction %>

      <div>
        <strong>会員ステータス</strong>
        <% if @user.is_deleted == true %>
          <span class="text-secondary font-weight-bold">退会済</span>
        <% else %>
          <span class='text-success font-weight-bold'>有効</span>
        <% end %>
        <%= link_to 'プロフィール編集', edit_admin_user_path(@user.id), class: "btn btn-outline-secondary mt-3" %>
      </div>
    </div>

    <!-- ユーザーの投稿一覧 -->
    <div  class='col-md-8 offset-md-1'>
      <table class="table shadow-lg mt-4">

        <thead>
          <tr>
            <th>コーディネート</th>
            <th>タイトル</th>
            <th>本文</th>
          </tr>
        </thead>

        <tbody>
          <% @outfits.each do |outfit| %>
          <tr>
            <td>
              <%= link_to outfit_path(outfit.id) do %>
                <%= image_tag outfit.image, size: "50x50" %>
              <% end %>
            </td>
            <td><%= link_to outfit.title, admin_outfit_path(outfit.id) %></td>
            <td><%= outfit.body %></td>
          </tr>
          <% end %>
        </tbody>

      </table>
    </div>
  </div>
</div>

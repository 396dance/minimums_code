<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>

      <h1>管理者側の会員の詳細ページ</h1>

      <table class='table'>
        <tr><%= image_tag @user.get_profile_image(100,100) %></tr>
        <tr>
          <th>ニックネーム</th>
          <th><%= @user.nickname %></th>
        </tr>
        <tr>
          <th>自己紹介</th>
          <th><%= @user.introduction %></th>
        </tr>
        <tr>
          <th>身長(㎝)</th>
          <th><%= @user.height %></th>
        </tr>
        <tr>
          <th>会員ステータス</th>
          <th>
            <% if @user.is_deleted == true %>
              <p class="text-secondary font-weight-bold">退会済</p>
            <% else %>
              <p class='text-success font-weight-bold'>有効</p>
            <% end %>
          </th>
        </tr>
        <tr>
          <th>
            <%=link_to 'プロフィール編集', edit_admin_user_path(@user.id), class: "btn btn-outline-secondary" %>
          </th>
        </tr>
      </table>
    </div>

    <!-- ユーザーの投稿一覧 -->
    <div  class='col-md-8 offset-md-1'>
      <table>
        <thead>
          <tr>
            <th>投稿画像</th>
            <th>タイトル</th>
            <th>本文</th>
          </tr>
        </thead>
        <tbody>
          <% @outfits.each do |outfit| %>
          <tr>
            <td>
              <%= link_to outfit_path(outfit.id) do %>
                <%= image_tag outfit.image, size: "50x50" %>
              <% end %>
            </td>
            <td><%= link_to outfit.title, admin_outfit_path(outfit.id) %></td>
            <td><%= outfit.body %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

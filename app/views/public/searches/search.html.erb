<div class='container px-5 px-sm-0 mt-5'>
  <div class='row'>

    <div class='col-md-4'>
      <!--マイプロフィール-->
      <%= render 'public/users/info', user: current_user %>
      <!--投稿フォーム-->
      <%= render 'public/outfits/form', outfit: @outfit, user: @user %>
    </div>

    <div class='col-md-8'>
      <h4 class="mt-3 text-center">キーワード検索結果</h4>

        <!--検索対象モデルがUserの時 -->
      <% if @range == "ニックネーム" %>
        <table class="table table-inverse">
          <tbody>
            <tr>
              <th></th>
              <th>ニックネーム</th>
              <th>自己紹介</th>
              <th>身長</th>
            </tr>
            <tr>
              <% if @users.blank? %>
                <td></td>
                <td>検索結果がありませんでした。</td>
              <% end %>
            </tr>
            <% @users.each do |user| %>
              <tr>
                <td><%= image_tag user.get_profile_image(100,100) %></td>
                <td><%= link_to user.nickname, user_path(user.id) %></td>
                <td><%= user.introduction %></td>
                <td><%= user.height %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      <% else %>
        <!--検索対象モデルがUserではない時(= 検索対象モデルがOutfitの時) -->
        <% if @outfits.blank? %>
          <p>検索結果がありませんでした。</p>
        <% end %>

        <% @outfits.each do |outfit| %>
          <div class="col-4 mt-3 px-md-1 px-0">
            <div class="card">
              <%= link_to outfit_path(outfit.id) do %>
                <%= image_tag outfit.image, class: 'index-outfit-image', style: 'width:100%; aspect-ratio:1/1; object-fit:cover;' %>
              <% end %>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
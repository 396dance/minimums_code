<div class="search_form">

  <%= form_with url: search_path, local: true, method: :get do |f| %>
    <span>キーワード検索：</span>
    <%= f.text_field :word, placeholder:"キーワードを入力" %>
    <%= f.select :range, options_for_select([['ニックネーム'], ['投稿本文']]) %>
    <% if :word.nil? %>
      <%= 空です %>
    <% else %>
      <%= f.submit "検索", class: "btn btn-primary" %>
    <% end %>
  <% end %>

</div>

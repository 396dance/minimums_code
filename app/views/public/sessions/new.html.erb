<div class="registration-wrap">
  <div class="container h-100 d-flex justify-content-center align-items-center">
    <div class="p-3 field card">

      <%= form_with model:@user, url: user_session_path do |f| %>
        <div>
          <h2>ログイン</h2>

          <!--エラーメッセージ-->
          <% if alert %>
            <div class="alert alert-danger">
              <%= alert %>
            </div>
          <% end %>

          <!--ログインフォーム-->
          <%= f.label :email, class:"sr-only" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control mb-3", placeholder:"メールアドレス" %>
        </div>

        <div class="field">
          <%= f.label :password, class:"sr-only" %>
          <%= f.password_field :password, autocomplete: "current-password", class:"form-control mb-3", placeholder:"パスワード" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me, class:"mb-3" %>
          </div>
        <% end %>

        <div class="actions">
          <%= f.submit "ログイン", class:"btn btn-success mb-3"%>
        </div>
      <% end %>

      <%= render "public/shared/links" %>
    </div>
  </div>
</div>

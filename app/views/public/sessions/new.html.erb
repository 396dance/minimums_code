<div class="registration-wrap">
  <div class="container h-100 d-flex justify-content-center align-items-center">
    <div class="p-3 field card">

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div>
          <h2>ログイン</h2>
          <%= f.label :email, class:"sr-only" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control", placeholder:"メールアドレス" %>
        </div>

        <div class="field">
          <%= f.label :password, class:"sr-only" %>
          <%= f.password_field :password, autocomplete: "current-password", class:"form-control", placeholder:"パスワード" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>

        <div class="actions">
          <%= f.submit "Log in" %>
        </div>
      <% end %>

      <%= render "public/shared/links" %>
    </div>
  </div>
</div>

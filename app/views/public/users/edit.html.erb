<div class="container m-5 mx-auto">
  <div class="row">
    <div class="col-12 mx-auto">
      <h4><strong>プロフィール編集</strong></h4>

      <%= form_with model: @user, url: user_path(@user.id), method: :patch do |f| %>
      <div class="col-12 shadow py-5 mt-4 bg-white">

          <!--エラー表示-->
          <% if @user.errors.any? %>
            <%= @user.errors.count %>件のエラーが発生しました
            <ul>
              <% @user.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          <% end %>

            <div class="form-group">
              <label>ニックネーム</label>
              <%= f.text_field :nickname, autofocus: true, id:"inputName", placeholder:"名前", class:"form-control" %>
            </div>

            <div class="form-group">
              <label>自己紹介</label>
              <%= f.text_area :introduction, autofocus: true, id:"inputIntroduction", placeholder:"自己紹介", class: "form-control", rows: "5" %>
            </div>

            <div class="form-group">
              <label>アイコン</label>
              <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
            </div>

            <div class="form-group">
              <label>身長</label>
              <%= f.select(:height, (140..160)) %>
            </div>
      </div>
      <div class="actions mt-3 text-center">
        <%= f.submit '編集内容を保存', class: "btn btn-success mr-5" %>
        <%= link_to quit_user_path(@user.id), class: "ml-5" do %>
         <button type="button" class="btn btn-danger">退会する</button>
        <% end %>
      </div>

    <% end %>
   </div>
  </div>
</div>
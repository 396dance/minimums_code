<div class="container m-5 mx-auto">
  <div class="row">
    <div class="col-9 mx-auto">
      <h4><strong>プロフィール編集</strong></h4>

      <%= form_with model: @user, url: user_path(@user.id), method: :patch do |f| %>
      <div class="shadow py-5 mt-4 bg-white">
        <table class="table table-borderless table-sm ml-5">
          <!--エラー表示-->
          <% if @user.errors.any? %>
            <%= @user.errors.count %>件のエラーが発生しました
            <ul>
              <% @user.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          <% end %>

          <tr class="row">
            <th class="col-md-12 col-lg-6">ニックネーム</th>
            <th class="col-md-12 col-lg-6 field">
              <%= f.text_field :nickname, autofocus: true, id:"inputName", placeholder:"名前"%>
            </th>
          </tr>

          <tr class="row ">
            <th class="col-md-12 col-lg-6">自己紹介</th>
            <th class="col-md-12 col-lg-6 field">
              <%= f.text_area :introduction, autofocus: true, id:"inputIntroduction", placeholder:"自己紹介" %>
            </th>
          </tr>

          <tr class="row">
            <th class="col-md-12 col-lg-6">アイコン</th>
            <th class="col-md-12 col-lg-6 field">
              <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
            </th>
          </tr>

          <tr class="row">
            <th class="col-md-12 col-lg-6">身長</th>
            <th class="col-md-12 col-lg-6 field">
              <%= f.select(:height, (140..160)) %>
            </th>
          </tr>

        </table>
      </div>
      <div class="actions mt-3 text-center">
        <%= f.submit '編集内容を保存', class: "btn btn-success mr-5" %>
        <%= link_to "/users/#{@user.id}/quit", class: "ml-5" do %>
         <button type="button" class="btn btn-danger">退会する</button>
        <% end %>
      </div>

    <% end %>
   </div>
  </div>
</div>
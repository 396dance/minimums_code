<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <% if @user.errors.any? %>
        <%= @user.errors.count %>件のエラーが発生しました
        <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>

      <h2>プロフィール編集</h2>
      <%= form_with model: @user, url: user_path(@user.id), method: :patch  do |f| %>

        <div class="form-group">
          <label for="inputName">ニックネーム</label>
          <%= f.text_field :nickname, autofocus: true, id:"inputName", placeholder:"名前"%>
        </div>
        <div class="form-group">
          <label for="inputIntroduction">自己紹介</label>
          <%= f.text_area :introduction, autofocus: true, id:"inputIntroduction", placeholder:"自己紹介"%>
        </div>
        <div class="form-group">
          <label for="inputImage">アイコン</label>
          <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
        </div>
        <div class="form-group">
          <label for="inputHeight">身長</label>
          <%= f.select(:height, (130..170)) %>
        </div>
        <div class="form-group">
          <%= link_to "退会", "/users/#{@user.id}/quit" %>
        </div>
        <div class="form-group">
          <%= f.submit "変更を保存" %>
        </div>

      <% end %>

    </div>
  </div>
</div>
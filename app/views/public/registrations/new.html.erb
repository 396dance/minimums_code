<div class="container mt-5 mb-5 h-100 d-flex justify-content-center align-items-center">
  <div class="p-3 field card">

    <%= form_with model:@user, url: user_registration_path, id: "userForm" do |f| %>
      <div>
        <h2>新規登録</h2>

        <!--エラーメッセージ-->
          <%= render "public/shared/error_messages", resource: resource %>

        <div class="field">
          <%= f.label :nickname, "ニックネーム", class:"sr-only" %>
          <div id="userName">
            <%= f.text_field :nickname, class:"form-control mb-3", placeholder:"ニックネーム", id:"user_name" %>
          </div>
          <%= f.label :email, "メールアドレス", class:"sr-only" %>
          <div id="userEmail">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control mb-3", placeholder:"メールアドレス", id:"user_email" %>
          </div>
          <div id="userPasswordGroup">
            <%= f.label :password, "パスワード", class:"sr-only" %>
            <div id="userPassword">
              <%= f.password_field :password, autocomplete: "new-password", class:"form-control mb-3", placeholder:"パスワード(6文字以上)", id:"user_password" %>
            </div>
            <%= f.label :password_confirmation, "パスワード(確認用)", class:"sr-only" %>
            <div id="userPasswordConfirmation">
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control mb-3", placeholder:"パスワード再入力", id:"user_password_confirmation" %>
            </div>
          </div>
        </div>
    </div>

      <div class="actions">
        <%= f.submit "新規登録", class:"btn btn-primary mb-3", id: "user_submit" %>
      </div>
    <% end %>

    <%= render "public/shared/links" %>

  </div>
</div>

<%= render "form_validation" %>
<div class="registration-wrap">
  <div class="container h-100 d-flex justify-content-center align-items-center">
    <div class="col-md-4 card-body">

      <h2>新規登録</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "public/shared/error_messages", resource: resource %>

        <div class="field">
          <%= f.label :nickname, "ニックネーム", class:"sr-only" %>
          <%= f.text_field :nickname, class:"form-control", placeholder:"ニックネーム" %>
          <%= f.label :email, "メールアドレス", class:"sr-only" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control", placeholder:"メールアドレス" %>
          <%= f.label :password, "パスワード", class:"sr-only" %>
          <%= f.password_field :password, autocomplete: "new-password", class:"form-control", placeholder:"パスワード(6文字以上)" %>
          <%= f.label :password_confirmation, "パスワード", class:"sr-only" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control", placeholder:"パスワード再入力" %>
        </div>

        <div class="actions">
          <%= f.submit "新規登録", class:"btn btn-primary" %>
        </div>
      <% end %>

      <%= render "public/shared/links" %>

    </div>
  </div>
</div>
<div class="registration-wrap">
  <div class="container h-100 d-flex justify-content-center align-items-center">
    <div class="p-3 field card">

      <%= form_with model:@user, url: user_registration_path do |f| %>
        <div>
          <h2>新規登録</h2>

          <!--エラーメッセージ-->
              <%= render "public/shared/error_messages", resource: resource %>

          <div class="field">
            <%= f.label :nickname, "ニックネーム", class:"sr-only" %>
            <%= f.text_field :nickname, class:"form-control mb-3", placeholder:"ニックネーム" %>
            <%= f.label :email, "メールアドレス", class:"sr-only" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control mb-3", placeholder:"メールアドレス" %>
            <%= f.label :password, "パスワード", class:"sr-only" %>
            <%= f.password_field :password, autocomplete: "new-password", class:"form-control mb-3", placeholder:"パスワード(6文字以上)" %>
            <%= f.label :password_confirmation, "パスワード", class:"sr-only" %>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control mb-3", placeholder:"パスワード再入力" %>
          </div>
      </div>

        <div class="actions">
          <%= f.submit "新規登録", class:"btn btn-primary mb-3" %>
        </div>
      <% end %>

      <%= render "public/shared/links" %>

    </div>
  </div>
</div>
<!--フォローボタン-->
<% if current_user.following?(user) %>
  <%= link_to user_relationships_path(user.id), method: :delete, class: "btn btn-outline-secondary" do %>
    <i class="fas fa-user-minus"></i>フォロー解除
  <% end %>
<% else %>
  <%= link_to user_relationships_path(user.id), method: :post, class: "btn btn-outline-info" do %>
    <i class="fas fa-user-plus"></i>フォローする
  <% end %>
<% end %>

  <h4 class="mt-3 text-center"><strong>コーディネート一覧</strong></h4>

    <!--タグ検索フォーム-->
    <%= form_tag outfits_path, method: :get, class: 'boards_searchForm' do %>
      <%= select_tag :tag_id,options_from_collection_for_select(Tag.all, :id, :name, params[:tag_id]),{prompt: 'タグで絞り込み検索',onchange: 'submit(this.form);'}%>
    <% end %>

    <!--キーワード検索フォーム-->
    <%= render "public/searches/search" %>
    <!-- ユーザーの投稿一覧 -->
      <div class="card-columns mt-3">
        <% outfits.each do |outfit| %>
          <div class="card">
            <%= link_to outfit_path(outfit.id) do %>
              <%= image_tag outfit.image, style: 'width:100%; aspect-ratio:1/1; object-fit:cover;' %>
            <% end %>
            <div class="card-body">
              <%= link_to outfit.user.nickname.truncate(12), user_path(outfit.user.id) %>
              <p class="card-text" style="margin-bottom: <%= outfit.tags.size > 0 ? '0' : '40px' %>">
                <% if outfit.tags.size > 0 %>
                  <p class="card-text">
                    <span style="font-size: 0.7em; background-color: #e1e1e1; color: #333;border-radius: 3px;padding: 2px 3px;"><%= outfit.tags[0].name.truncate(8) %></span> ...
                    <span style="font-size: 11px;padding: 3px;"><%= outfit.tags.size %>tags</span>
                  </p>
                <% end %>
              </p>
            </div>

            <div class="card-footer">

              コメント数：<%= outfit.outfit_comments.count %>
              <p id="favorite_buttons_<%= outfit.id %>">
                <%= render "public/favorites/favorite", outfit: outfit %>
              </p>
            </div>
          </div>
        <% end %>
      </div>
      <%= paginate outfits %>



<h1>投稿詳細ページ</h1>

<h2>画像</h2>
<p><%= image_tag @outfit.image %></p>

<h2>タイトル</h2>
<p><%= @outfit.title %></p>

<h2>本文</h2>
<p><%= @outfit.body %></p>

<h2>投稿者</h2>
<p><%= link_to @outfit.user.nickname, user_path(@outfit.user.id) %></p>

<!--いいねボタン-->
<% if @outfit.favorited?(current_user) %>
  <%= link_to outfit_favorites_path(@outfit), method: :delete do %>
    ♥<%= @outfit.favorites.count %>
  <% end %>
<% else %>
  <%= link_to outfit_favorites_path(@outfit), method: :post do %>
    ♡<%= @outfit.favorites.count %>
  <% end %>
<% end %>

<!--コメント投稿フォームの部分テンプレート-->
<div id="comment_form">
  <%= render "public/outfit_comments/form", outfit: @outfit, outfit_comment: @outfit_comment %>
</div>
<!--コメント一覧の部分テンプレート-->
<div id="comments-area">
  <%= render "public/outfit_comments/index", outfit: @outfit, outfit_comments: @outfit_comments %>
</div>

<div>
  <p>コメント件数：<%= @outfit.outfit_comments.count %></p>
</div>


